Layer 0 :


ct :
Ticks_ToMicroseconds : u64 = 1000000;
Microsecond_ToSecond : u64 = 10000000;
;

HighResInterval : struct :
	Start, End : u64
;;

TimingData : struct :
	Snapshot : HighResInterval;
	TicksElapsed : u64;
	Miroseconds  : f64;
	DeltaTime    : f64;
;;

expose :
	Snapshot : proc :
			Start, End;
		;
	;

	proc :
		GetContext -> ro ptr TimingData;
		Load_Module, Update;
		TakeSnapshot_Initial, TakeSnapshot_Ending;
	;
;

proc : InitData; ;

Timer : struct :
	Elapsed : f64;
	End     : f64;
;;

(_self : ptr Timer)
	expose proc :
		Ended -> bool;
		Reset, Tick;
	;
;


; // Layer 0
